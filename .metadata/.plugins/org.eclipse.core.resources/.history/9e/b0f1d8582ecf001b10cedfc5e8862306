	<div class="class2">
		<div id="test1">연습용1번</div>
		<div id="test2">연습용2번</div>
		<div id="test3">연습용3번</div>
		<div id="test4">연습용4번</div>
	</div>
	<script type="text/javascript">
		const menuWrap = document.querySelector('.class1');
		
		function select(a1, a2){
		    Array.from(a1.children).forEach(
		        v => v.classList.remove('selected')
		        v1 => v1.classList.remove('none')
		    )
		    if(a2) a2.classList.add('selected');
		    
		}
		
		menuWrap.addEventListener('click', e => {
		    const selected = e.target;
		    select(menuWrap, selected);
		})
	
	
	</script>
